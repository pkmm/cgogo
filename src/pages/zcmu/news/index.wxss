/* pages/zcmu/news/index.wxss */

.title {
  font-size: medium;
  text-align: left;
  display: inline-block;
  font-family: console, serif;
  padding: 15px 10px 0;
  line-height: 1.5;
}

.box {
  background-color: #fff;
  border-bottom: 1px solid #d1d5da;
  border-radius: 3px;
}

.date {
  font-size: smaller;
  text-align: right;
  font-family: 'Courier New', Courier, monospace;
  padding-right: 10px;
  padding-bottom: 5px;
  color: gray;
}

.button-wrapper {
  position: fixed;
  bottom: 100px;
  right: 20px;
  z-index: 500;
}

button {
  margin-bottom: 10px;
}

.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  transition: 0.3s;
  border-radius: 5px;
  margin-top: 15px;
  margin-left: 10px;
  margin-right: 10px;
}

.back-top {
  display: inline-block;
  width: 50px;
  height: 50px;
  line-height: 68px;
  font-size: 12px;
  color: #ffffff;
  text-align: center;
  border-radius: 50%;
  /*background: rgba(0, 0, 0, 0.8) url('./images/4.png') no-repeat center -1110px;*/
  -webkit-background-size: 50px auto;
}