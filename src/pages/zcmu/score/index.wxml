  <view class=''>
    <view class="">
      <view class="weui-panel__hd">
        <view class='jd-des'>
          <view wx:if="{{student.name}}" style='color: black'>
            {{student.name}}
          </view>
          <view>
            总平均绩点：【{{allSemesterInfo.avg}}】已修必修课：{{allSemesterInfo.total}}
          </view>
          <view style='display: block'>
            {{currentSemester}}学年均绩点：【{{currentSemesterInfo.avg}}】已修必修课：{{currentSemesterInfo.total}}
          </view>
          <view style='color: green'>提示: 绩点只计算必修课</view>
        </view>
      </view>
      <van-collapse
       value="{{activeNames}}"
       bind:change="onChange"
       accordion
       >
        <van-collapse-item wx:for="{{allSemesters}}" name="{{semester}}" title="{{semester}}" wx:for-index="i" wx:for-item="semester" wx:key="i">
          <view class="cell" wx:for="{{scoreGroupInfo[semester]}}" wx:for-index="j" wx:for-item='score' wx:key="{{score.id}}">
            <view class="kcmc">{{score.kcmc}}</view>
            <view class="normal">成绩：{{score.cj}}</view>
            <view class="normal">绩点：{{score.jd}}</view>
            <view class="normal">课程性质：{{score.type}}</view>
            <view class="normal" wx:if="{{score.bkcj}}">补考成绩：{{score.bkcj}}</view>
            <view class="normal" wx:if="{{score.cxcj}}">重修成绩：{{score.cxcj}}</view>
          </view>
        </van-collapse-item>
      </van-collapse>
