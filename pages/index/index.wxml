<view class="page">
    <view class="page__hd">
        <view class="page__title">小助手</view>
        <view class="page__desc">预留位置(adv)</view>
    </view>
    <view class="page__bd">
        <view class="weui-grids">
            <block wx:for="{{menus}}" wx:key="*this">
                <navigator url="{{item.url}}" open-type='navigate' class="weui-grid" hover-class="weui-grid_active">
                    <image class="weui-grid__icon" src="../../images/tieba.png" />
                    <view class="weui-grid__label">{{item.name}}</view>
                </navigator>
            </block>
        </view>
    </view>
</view>